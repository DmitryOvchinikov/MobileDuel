<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_manualGame">

    <ImageView
        android:id="@+id/manual_IMG_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/main_background"
        android:scaleType="centerCrop"
    />


    <ProgressBar
        android:id="@+id/manual_BAR_leftPlayer"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_above="@id/manual_IMG_leftPlayer"
        android:layout_marginBottom="10dp"
        android:scaleY="5"
    />

    <ProgressBar
        android:id="@+id/manual_BAR_rightPlayer"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_above="@id/manual_IMG_rightPlayer"
        android:layout_marginBottom="10dp"
        android:scaleY="5"
    />

    <ImageView
        android:id="@+id/manual_IMG_leftPlayer"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:contentDescription="@string/left_player"
        />

    <ImageView
        android:id="@+id/manual_IMG_rightPlayer"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:contentDescription="@string/right_player"
        />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="125dp"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/manual_IMG_leftPlayer">

        <Button
            android:id="@+id/manual_BTN_leftlight"
            android:layout_height="wrap_content"
            android:layout_width="150dp"
            android:layout_weight="1"
            android:text="@string/main_BTN_light"
            android:textStyle="bold"
            />

        <Button
            android:id="@+id/manual_BTN_leftheavy"
            android:layout_height="wrap_content"
            android:layout_width="150dp"
            android:layout_weight="1"
            android:text="@string/main_BTN_heavy"
            android:textStyle="bold"
            />

        <Button
            android:id="@+id/manual_BTN_leftheal"
            android:layout_height="wrap_content"
            android:layout_width="150dp"
            android:layout_weight="1"
            android:text="@string/main_BTN_heal"
            android:textStyle="bold"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="125dp"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/manual_IMG_rightPlayer">

        <Button
            android:id="@+id/manual_BTN_rightlight"
            android:layout_height="wrap_content"
            android:layout_width="150dp"
            android:layout_weight="1"
            android:text="@string/main_BTN_light"
            android:textStyle="bold"
        />

        <Button
            android:id="@+id/manual_BTN_rightheavy"
            android:layout_height="wrap_content"
            android:layout_width="150dp"
            android:layout_weight="1"
            android:text="@string/main_BTN_heavy"
            android:textStyle="bold"
        />

        <Button
            android:id="@+id/manual_BTN_rightheal"
            android:layout_height="wrap_content"
            android:layout_width="150dp"
            android:layout_weight="1"
            android:text="@string/main_BTN_heal"
            android:textStyle="bold"
        />
</LinearLayout>


</RelativeLayout>