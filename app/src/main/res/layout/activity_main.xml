<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/main_IMG_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/main_background"
        android:scaleType="centerCrop"
    />


    <ProgressBar
        android:id="@+id/main_BAR_leftPlayer"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_above="@id/main_IMG_leftPlayer"
        android:layout_marginBottom="10dp"
    />

    <ProgressBar
        android:id="@+id/main_BAR_rightPlayer"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_above="@id/main_IMG_rightPlayer"
        android:layout_marginBottom="10dp"
    />

    <ImageView
        android:id="@+id/main_IMG_leftPlayer"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:contentDescription="@string/left_player"
        />

    <ImageView
        android:id="@+id/main_IMG_rightPlayer"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:contentDescription="@string/right_player"
        />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="125dp"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/main_IMG_leftPlayer">

        <Button
            android:id="@+id/main_BTN_left1"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:text="@string/main_BTN_light"
            android:background="@drawable/action_buttons"
            />

        <Button
            android:id="@+id/main_BTN_left2"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:text="@string/main_BTN_heavy"
            android:background="@drawable/action_buttons"
            />

        <Button
            android:id="@+id/main_BTN_left3"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:text="@string/main_BTN_heal"
            android:background="@drawable/action_buttons"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="125dp"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/main_IMG_rightPlayer">

        <Button
            android:id="@+id/main_BTN_right1"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:text="@string/main_BTN_light"
            android:background="@drawable/action_buttons"
        />

        <Button
            android:id="@+id/main_BTN_right2"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:text="@string/main_BTN_heavy"
            android:background="@drawable/action_buttons"
        />

        <Button
            android:id="@+id/main_BTN_right3"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:text="@string/main_BTN_heal"
            android:background="@drawable/action_buttons"
        />
</LinearLayout>


</RelativeLayout>